@page
@model ICBFApp.Pages.Jardin.IndexModel
@{
}
@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="success-message">
        <strong>@Model.SuccessMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $("#success-message").fadeOut("slow");
            }, 5000); 
        });

       
        function confirmarEliminacion(idJardin) {
            Swal.fire({
                title: '¿Desea continuar?',
                text: "Esta eliminando el Jardin ¿Esta seguro?",
             
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí!',
                cancelButtonText: 'Volver'
            }).then((result) => {
                if (result.isConfirmed) {
                    
                    window.location.href = '/Jardin/Delete?id=' + idJardin;
                } else {
                    
                }
            });
        }
    </script>
}

<br />
<h2>Lista de Jardínes</h2>
<a class="btn btn-primary btn-sm" href="/Jardin/Create">
    <span class="material-symbols-outlined">AGREGAR JARDIN</span>
</a>

<table class="table table-light table-striped">
    <thead>
        <tr>
            <td>ID</td>
            <td>Nombre</td>
            <td>Dirección</td>
            <td>Estado</td>
            <td>Acciones</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listJardin)
        {
            <tr>
                <td>@item.idJardin</td>
                <td>@item.nombre</td>
                <td>@item.direccion</td>
                <td>@item.estado</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Jardin/Edit?id=@item.idJardin">
                        <span>EDITAR</span>
                    </a>
                    <a class="btn btn-danger btn-sm" href="#" onclick="confirmarEliminacion(@item.idJardin)">
                        <span>ELIMINAR</span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>