@page
@model ICBFApp.Pages.Jardin.CreateModel
@{
}

<br />
<h2>Agregar Nuevo Jardín</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="POST">
    <div class="container">
        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                <label class="col-form-label" for="nombreJardin">Nombre Jardín</label>
                <input type="text" class="form-control" id="nombreJardin" name="nombreJardin" value="@Model.jardinInfo.nombre">
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                <label class="col-form-label" for="direccionJardin">Dirección Jardín</label>
                <input type="text" class="form-control" id="direccionJardin" name="direccionJardin" value="@Model.jardinInfo.direccion">
            </div>
        </div>

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">Agregar</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-danger" href="/Jardin/Index" role="button">Cancelar</a>
            </div>
        </div>
    </div>
</form>