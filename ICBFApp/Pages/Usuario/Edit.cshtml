@page
@model ICBFApp.Pages.Usuario.EditModel
@{
}

<br>
<h2>Editar Usuario</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="POST">
    <input type="hidden" class="form-control" name="idUsuario" value="@Model.usuarioInfo.idUsuario" />
    <input type="hidden" class="form-control" name="idDatosBasicos" value="@Model.datosBasicos.idDatosBasicos" />

    <div class="container">
        <div class="row mb-3">
            <div class="col-sm-6">
                <label class="col-form-label" for="tipoDocumento">Tipo de Documento</label>
                <select id="tipoDocumento" name="tipoDocumento" class="form-control">
                    <option value="">Seleccione un Tipo de Documento</option>
                    @foreach (var tipoDoc in Model.tipoDocInfo)
                    {
                        if (tipoDoc.idTipoDoc.Trim().Equals(Model.tipoDocInfoSelected.idTipoDoc.Trim(), StringComparison.OrdinalIgnoreCase))
                        {
                            <option value="@tipoDoc.idTipoDoc" selected>@tipoDoc.tipo</option>
                        }
                        else
                        {
                            <option value="@tipoDoc.idTipoDoc">@tipoDoc.tipo</option>
                        }
                    }
                </select>
            </div>
            <div class="col-sm-6">
                <label class="col-form-label" for="identificacion">Identificación</label>
                <input type="text" class="form-control" id="identificacion" name="identificacion" value="@Model.datosBasicos.identificacion"
                       maxlength="10" pattern="[0-9]{10}" title="Por favor ingrese un número de documento válido de 10 dígitos">
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-6">
                <label class="col-form-label" for="nombres">Nombres</label>
                <input type="text" class="form-control" id="nombres" name="nombres" value="@Model.datosBasicos.nombres">
            </div>
            <div class="col-sm-6">
                <label class="col-form-label" for="fechaNacimiento">Fecha de Nacimiento</label>
                <input type="date" class="form-control" id="fechaNacimiento" name="fechaNacimiento" value="@Model.datosBasicos.fechaNacimiento">
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-6">
                <label class="col-form-label" for="celular">Teléfono</label>
                <input type="tel" class="form-control" id="celular" name="celular" value="@Model.datosBasicos.celular"
                       maxlength="10" pattern="[0-9]{10}" title="Por favor ingrese un número de celular válido de 10 dígitos">
            </div>
            <div class="col-sm-6">
                <label class="col-form-label" for="direccion">Dirección</label>
                <input type="text" class="form-control" id="direccion" name="direccion" value="@Model.datosBasicos.direccion">
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-6">
                <label class="col-form-label" for="rol">Rol</label>
                <select id="rol" name="rol" class="form-control">
                    <option value="">Seleccione un Rol</option>
                    @foreach (var rol in Model.rolInfo)
                    {
                        if (rol.idRol.Trim().Equals(Model.rolinfoSelected.idRol.Trim(), StringComparison.OrdinalIgnoreCase))
                        {
                            <option value="@rol.idRol" selected>@rol.nombre</option>
                        }
                        else
                        {
                            <option value="@rol.idRol">@rol.nombre</option>
                        }
                    }
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">Editar</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-danger" href="/Usuario/Index" role="button">Cancelar</a>
            </div>
        </div>
    </div>
</form>