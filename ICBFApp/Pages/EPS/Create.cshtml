@page
@model ICBFApp.Pages.EPS.CreateModel
@{
}

<br />
<h2>Agregar Nueva EPS</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

<form method="POST">
    <div class="container">
        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                <label class="col-form-label" for="nombre">Nombre EPS</label>
                <input type="text" class="form-control" id="nombre" name="nombre" value="@Model.epsInfo.nombre">
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                <label class="col-form-label" for="NIT">NIT</label>
                <input type="text" class="form-control" id="NIT" name="NIT" value="@Model.epsInfo.NIT">
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                <label class="col-form-label" for="direccion">Dirección</label>
                <input type="text" class="form-control" id="direccion" name="direccion" value="@Model.epsInfo.direccion">
            </div>
        </div>

        <div class="row mb-3 justify-content-center">
            <div class="col-sm-10">
                <label class="col-form-label" for="telefono">Teléfono</label>
                <input type="tel" class="form-control" id="telefono" name="telefono" value="@Model.epsInfo.telefono"
                       maxlength="10" pattern="[0-9]{10}" title="Por favor ingrese un número de teléfono válido de 10 dígitos">
            </div>
        </div>

        <div class="row mb-3">
            <div class="offset-sm-3 col-sm-3 d-grid">
                <button type="submit" class="btn btn-primary">Agregar</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-danger" href="/EPS/Index" role="button">Cancelar</a>
            </div>
        </div>
    </div>
</form>