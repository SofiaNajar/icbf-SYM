@page
@model ICBFApp.Pages.AvancesAcademicos.IndexModel
@{
    ViewData["Title"] = "Avances Académicos";
}

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="success-message">
        <strong>@Model.SuccessMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $("#success-message").fadeOut("slow");
            }, 5000); 
        });

        
        function confirmarEliminacion(idAvanceAcademico) {
            Swal.fire({
                title: '¿Desea continuar?',
                text: "Esta eliminando el Registro Academico ¿Esta seguro?",

                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí!',
                cancelButtonText: 'Volver'
            }).then((result) => {
                if (result.isConfirmed) {
                  
                    window.location.href = '/AvancesAcademicos/Delete?idAvanceAcademico=' + idAvanceAcademico;
                } else {
                  
                }
            });
        }
    </script>
}

<br />
<h2>Lista de Avances Académicos</h2>
<a class="btn btn-primary btn-sm" href="/AvancesAcademicos/Create">
    <span>AGREGAR</span>
</a>

<table class="table table-light table-striped">
    <thead>
        <tr>
            <td>ID</td>
            <td>Identificación</td>
            <td>Nombre</td>
            <td>Nivel</td>
            <td>Notas</td>
            <td>Descripción</td>
            <td>Fecha de Entrega</td>
            <td>Acciones</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listAvanceAcademico)
        {
            <tr>
                <td>@item.idAvanceAcademico</td>
                <td>@item.datosBasicosInfo.identificacion</td>
                <td>@item.datosBasicosInfo.nombres</td>
                <td>@item.nivel</td>
                <td>@item.notas</td>
                <td>@item.descripcion</td>
                <td>@item.fechaEntrega</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/AvancesAcademicos/Edit?idAvanceAcademico=@item.idAvanceAcademico">
                    <span>EDITAR</span>
                    </a>
                    <a class="btn btn-danger btn-sm" href="#" onclick="confirmarEliminacion(@item.idAvanceAcademico)">
                        <span>ELIMINAR</span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
